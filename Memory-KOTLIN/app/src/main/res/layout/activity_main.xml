<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/best_moves"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintHeight_percent="8"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="Best moves: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/best_moves_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/best_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintHeight_percent="8"
        app:layout_constraintTop_toBottomOf="@+id/best_moves">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="Best time: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/best_time_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="16sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fields_grid_view_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/current_moves"
        app:layout_constraintHeight_percent="60"
        app:layout_constraintTop_toBottomOf="@+id/best_time">


        <GridView

            android:id="@+id/fields_grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="4dp"
            android:numColumns="4"
            android:padding="4dp"
            android:verticalSpacing="4dp" />

    </LinearLayout>


    <!--<LinearLayout-->
    <!--android:id="@+id/fields_rec_view_container"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/best_time"-->
    >-->

    <!--<androidx.recyclerview.widget.RecyclerView-->
    <!--android:id="@+id/fields_rec_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="4dp" />-->


    <!--</LinearLayout>-->


    <LinearLayout
        android:id="@+id/current_moves"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/current_time"
        app:layout_constraintHeight_percent="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="Current moves: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/current_moves_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@id/btn"
        app:layout_constraintHeight_percent="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:text="Current time: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/current_time_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@color/colorPrimary"
        android:onClick="setNewGame"
        android:text="New game"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="8" />

</androidx.constraintlayout.widget.ConstraintLayout>